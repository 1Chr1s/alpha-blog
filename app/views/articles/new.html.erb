<h1>Create an article </h1>
<!--********************Displaying errors**********************--> 
<% if @article.errors.any? %>
<h2>The following errors were caused by:</h2>
<ul>
<% @article.errors.full_messages.each do |message|%>
	<li><%= message %></li>
	 <%end%> 
</ul>
<%end%>
<!--********************************************************* -->

<%= form_for @article do |c| %>
	<p>
		<%= c.label :title %>
	</br>

		<%= c.text_field :title %>
	</p>

	<p> 
		<%= c.label :description %>
		<br/>
		<%= c.text_area :description %>

	</p>

	<p>
		<%= c.submit %>
	</p>

<%end%>