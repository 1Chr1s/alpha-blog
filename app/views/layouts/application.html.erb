<!--This a wrapper file, so everything that is written here will be displayed on every page. The "Yield"lets you add the other content.-->
<!DOCTYPE html>
<html>
  <head>
    <title>AlphaBlog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!-- Rendering to the navigation -->
    <%= render 'layouts/navigation' %>
  	<!-- Rendering to the _messages partial -->
    <%= render 'layouts/messages' %>
    <div class="container">
    <%= yield %>
    </div>
    <%= render 'layouts/footer' %>
  </body>
</html>
