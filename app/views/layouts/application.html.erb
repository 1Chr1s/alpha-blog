    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  	<!-- Rendering to the _messages partial -->
    <%= render 'layouts/messages' %>
    <%= yield %>

  </body>
</html>
